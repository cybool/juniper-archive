{% if configuration_applications is defined %}
applications {
    {% for each in configuration_applications.application_set %}
    application-set {{ each.name }} {
        {% for app in each.application %}
        application {{ app.name }};
        {% endfor %}
    }
    {% endfor %}
}
{% endif %}

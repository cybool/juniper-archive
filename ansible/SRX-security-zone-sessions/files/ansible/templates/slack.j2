#jinja2: lstrip_blocks: "True (or False)", trim_blocks: "True (or False)"
---

blocks:
- type: header
  text:
    type: plain_text
    text: ":robot_face: Juniper ChatBot"

- type: divider

- type: section
  text:
    type: mrkdwn
    text: |-
      :round_pushpin: Security Flow Report

- type: divider

- type: section
  text:
    type: mrkdwn
    text: |-
      Firewall: vsrx4

        LAN:
        {% for each in flows_lan %}
        {% if each.flows == '0' %}
        :white_small_square: *{{ each.interface }}*: {{ each.flows }} :x:
        {% else %}
        :white_small_square: *{{ each.interface }}*: {{ each.flows }} :white_check_mark:
        {% endif %}
        {% endfor %}

        WAN:
        {% for each in flows_wan %}
        {% if each.flows == '0' %}
        :white_small_square: *{{ each.interface }}*: {{ each.flows }} :x:
        {% else %}
        :white_small_square: *{{ each.interface }}*: {{ each.flows }} :white_check_mark:
        {% endif %}
        {% endfor %}

        DMZ:
        {% for each in flows_dmz %}
        {% if each.flows == '0' %}
        :white_small_square: *{{ each.interface }}*: {{ each.flows }} :x:
        {% else %}
        :white_small_square: *{{ each.interface }}*: {{ each.flows }} :white_check_mark:
        {% endif %}
        {% endfor %}

  accessory:
    type: image
    image_url: https://raw.githubusercontent.com/cdot65/svg-locker-shhhhh/master/firewalls.png
    alt_text: Firewall
